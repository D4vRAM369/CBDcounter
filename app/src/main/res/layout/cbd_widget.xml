<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp"
    android:gravity="center">

    <!-- Fecha -->
    <TextView
        android:id="@+id/widget_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/08"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:layout_marginBottom="2dp"
        android:alpha="0.9" />

    <!-- Emoji -->
    <TextView
        android:id="@+id/widget_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ˜Œ"
        android:textSize="16sp"
        android:layout_marginBottom="0dp" />

    <!-- Contador principal -->
    <TextView
        android:id="@+id/widget_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <!-- Botones (Grid 2x2) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="0dp">

        <!-- Fila Superior: Weed | Reset -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/widget_btn_weed"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:text="ðŸŒ¿"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/widget_button_square_weed"
                android:layout_marginRight="2dp" />

            <TextView
                android:id="@+id/widget_reset_button"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:text="â†»"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/widget_button_square_reset" />
        </LinearLayout>

        <!-- Fila Inferior: Polem | +1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/widget_btn_polem"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:text="ðŸ«"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/widget_button_square_polem"
                android:layout_marginRight="2dp" />

            <TextView
                android:id="@+id/widget_add_button"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:text="+1"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/widget_button_square_add" />
        </LinearLayout>

    </LinearLayout>

    <!-- Etiqueta CBD -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cbd"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:layout_marginTop="4dp"
        android:alpha="0.8" />

</LinearLayout>