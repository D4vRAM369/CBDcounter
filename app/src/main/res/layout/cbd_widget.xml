<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp"
    android:gravity="center">

    <!-- Fecha -->
    <TextView
        android:id="@+id/widget_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/08"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:layout_marginBottom="8dp"
        android:alpha="0.9" />

    <!-- Emoji -->
    <TextView
        android:id="@+id/widget_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ˜Œ"
        android:textSize="20sp"
        android:layout_marginBottom="4dp" />

    <!-- Contador principal -->
    <TextView
        android:id="@+id/widget_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- BotÃ³n +1 -->
        <TextView
            android:id="@+id/widget_add_button"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="+1"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/widget_button_add"
            android:layout_marginRight="4dp" />

        <!-- BotÃ³n Reset -->
        <TextView
            android:id="@+id/widget_reset_button"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="â†»"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/widget_button_reset"
            android:layout_marginLeft="4dp" />

    </LinearLayout>

    <!-- Etiqueta CBD -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cbd"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:layout_marginTop="4dp"
        android:alpha="0.8" />

</LinearLayout>