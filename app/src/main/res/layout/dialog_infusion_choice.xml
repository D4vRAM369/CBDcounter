<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_infusion_background"
    android:padding="24dp">

    <TextView
        android:id="@+id/infusionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/infusion_question"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/infusionSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/infusion_subtitle"
        android:textColor="@color/weed_smoke"
        android:textSize="14sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/weedButton"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/weed_option"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:backgroundTint="@color/weed_green"
        app:cornerRadius="18dp"
        app:rippleColor="@color/weed_ripple"
        app:strokeColor="@color/weed_outline"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/polemButton"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/polem_option"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:backgroundTint="@color/polem_orange"
        app:cornerRadius="18dp"
        app:rippleColor="@color/polem_ripple"
        app:strokeColor="@color/polem_outline"
        app:strokeWidth="1dp" />

</LinearLayout>
