<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajustes"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/exportAudioZipButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Exportar Audios en ZIP"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/settingsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backupCsvButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Backup Manual CSV"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/exportAudioZipButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/autoBackupSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Backup AutomÃ¡tico"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/backupCsvButton"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>